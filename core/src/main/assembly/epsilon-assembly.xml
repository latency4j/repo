<assembly>

	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>		
	</formats>
	
	<includeBaseDirectory>true</includeBaseDirectory>

	<baseDirectory>epsilon-with-dependencies</baseDirectory>

	<fileSets>
		<fileSet directory="src">
		<includes>
			<include>src/**/*</include>
			<include>pom.xml</include>
		</includes>			
		</fileSet>
	</fileSets>
			
	<dependencySets>
    	<dependencySet>
    		<outputDirectory>lib</outputDirectory>
    		<scope>runtime</scope>
      		<includes>
        		<include>*:jar:*</include>
      		</includes>
    	</dependencySet>
  	</dependencySets>
  	
</assembly>